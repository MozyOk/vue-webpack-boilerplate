{
  "compilerOptions": {
    "sourceMap": true,
    // TSはECMAScript 5に変換
    "target": "es2017",
    // TSのモジュールはES Modulesとして出力
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "src*": [
        "src*",
        "src*.vue"
      ]
    },
    "strict": true,
    // import Vue from 'vue' の書き方を許容する
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    // enable decorator
    "experimentalDecorators": true,
    // see: https://github.com/vuejs/vue-cli/issues/834#issuecomment-366534774
    "strictPropertyInitialization": false
  },
  "include": [
    "./src/**/*"
  ]
}
